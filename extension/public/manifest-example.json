{
  "manifest_version": 3,
  "name": "YouTube Enhancer",
  "version": "1.0.0",
  "description": "Enhances YouTube with customizable features like PiP button color toggle",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  }
}